    {
      "version": "2.0.0",
      "tasks": [
        {
          "label": "build",
          "type": "shell",
          "command": "g++", 
          "args": [
            "-std=c++23", 
            "-o",
            "${workspaceFolder}/${fileBasenameNoExtension}",
            "${workspaceFolder}/${fileBasename}",
            "-g" 
          ],
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "presentation": {
            "reveal": "always"
          },
          "problemMatcher": "$gcc"
        }
      ]
    }
